<section id="login-form">
    <h1 class="text-center py-3">Welcome to Reading Roundtable</h1>
    <p class="text-center">Search books you love, want to read, and want to know more about!</p>
    <p class="text-center">You can grow your collection and rate to your liking.</p>
    <div class="container d-flex justify-content-center mb-5">
        <form class="p-5 login form login-form">
            <div class="form-group">
                <h1 for="exampleInputEmail1" class="my-2 text-center fw-bolder">Login</h1>
                <label for="exampleInputPassword1">Email</label>
                <input type="email" class="form-control my-2 email" id="email-login" aria-describedby="emailHelp"
                    placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control my-2 password" id="password-login" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary my-2">Login</button>
            <div class="text-center">
                <p class="mt-3">New to Reading Roundtable?</p>
                <button class="btn btn-secondary" id="signup">Sign Up</button>
            </div>
        </form>
    </div>
</section>


